#!/run/current-system/sw/bin/bash

[ -z "$1" ] && echo "provide the input vid" && exit 1

input=$1

ffmpeg -i $input \
			 -pass 1 \
			 -vcodec libvpx \
			 -g 320 \
			 -qmax 63 \
			 -b:v 3M \
			 -f rawvideo \
			 -codec:a libvorbis \
			 -qscale:a 5 -an -y /dev/null && \
		ffmpeg -i $input \
					 -pass 2 \
					 -vcodec libvpx \
					 -g 320 \
					 -qmax 63 \
					 -b:v 3M \
					 -codec:a libvorbis \
					 -qscale:a 5 twopass_output.webm
